import express, { Router } from 'express';
import <%= objectCamelCase %>sController, { type <%= service %>sControllerType } from '../controllers/<%= service %>s.js';

const router: Router = express.Router();
const service = '<%= namePlural %>';

const controller = <%= objectCamelCase %>sController as <%= service %>sControllerType;

// get <%= object %>s or search <%= object %>s
router.get('/' + service, controller.find);

// get schema for <%= object %>s
router.get('/' + service + '/schema', controller.getSchema);

// get <%= object %>
router.get('/' + service + '/:id', controller.findOne);

