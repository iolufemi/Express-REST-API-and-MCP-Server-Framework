router.post('/' + service, controller.create);

// update all records that matches the query
router.put('/' + service, controller.update);

// update a single record
router.patch('/' + service + '/:id', controller.updateOne);

// delete all records that matches the query
router.delete('/' + service, controller.delete);

// Delete a single record
router.delete('/' + service + '/:id', controller.deleteOne);

// restore a previously deleted record
router.post('/' + service + '/:id/restore', controller.restore);

